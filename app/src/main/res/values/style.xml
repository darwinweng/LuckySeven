<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ZeroDPWrapParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonZeroDPWrapParent" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="TextViewLargeBold" parent="ZeroDPWrapParent">
        <item name="android:textSize">@dimen/text_32</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewTitle" parent="WrapParent">
        <item name="fontFamily">@font/inter_semibold</item>
        <item  name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/txtWhite</item>
    </style>


</resources>